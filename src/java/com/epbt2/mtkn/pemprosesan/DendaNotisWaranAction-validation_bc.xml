<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>     
    <field name="pilihan">
        <field-validator type="requiredstring">
            <message>Pilihan is required.</message>
        </field-validator>
    </field>   
    <field name="akaunDr">
        <field-validator type="fieldexpression">
            <param name="expression"><![CDATA[(pilihan != "1") || (akaunDr != "")]]></param>
            <message>No. Akaun is required.</message>
        </field-validator>
    </field>    
    <field name="akaunHgga">
        <field-validator type="fieldexpression">
            <param name="expression"><![CDATA[(pilihan != "1") || (akaunHgga != "")]]></param>
            <message>No. Akaun is required.</message>
        </field-validator>
    </field>  
    <field name="jlnKod">
        <field-validator type="fieldexpression">
            <param name="expression"><![CDATA[(pilihan != "2") || (jlnKod != "")]]></param>
            <message>Jalan is required.</message>
        </field-validator>
    </field>
    <validator type="regex">
        <param name="fieldName">amaunDr</param>
        <param name="regex"><![CDATA[^[0-9]+$]]></param>
        <message key="errors.number"/>
    </validator>    
    <validator type="regex">
        <param name="fieldName">amaunHgga</param>
        <param name="regex"><![CDATA[^[0-9]+$]]></param>
        <message key="errors.number"/>
    </validator>    
    <field name="tarikh">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field> 
    <validator type="regex">
        <param name="fieldName">tarikh</param>
        <param name="regex"><![CDATA[[0-9][0-9]/[0-9][0-9]/[1-9][0-9][0-9][0-9]]]></param>
        <message key="errors.date"/>
    </validator> 
    <field name="tempoh">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field> 
    <validator type="regex">
        <param name="fieldName">tempoh</param>
        <param name="regex"><![CDATA[[0-9][0-9]/[0-9][0-9]/[1-9][0-9][0-9][0-9]]]></param>
        <message key="errors.date"/>
    </validator>  
</validators>